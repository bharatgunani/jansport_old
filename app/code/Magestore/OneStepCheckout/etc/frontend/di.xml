<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Magento\Checkout\Controller\Cart\Add" type="Magestore\OneStepCheckout\Controller\Cart\Add" />
    <type name="Magento\Checkout\Block\Onepage\Link">
        <plugin name="onestepcheckout_link" type="Magestore\OneStepCheckout\Plugin\Checkout\Block\Onepage\Link"/>
    </type>
    <type name="Magento\Checkout\Block\Cart\Sidebar">
        <plugin name="onestepcheckout_cart_sidebar" type="Magestore\OneStepCheckout\Plugin\Checkout\Block\Cart\Sidebar"/>
    </type>
    <type name="Magento\Checkout\Model\GuestPaymentInformationManagement">
        <plugin name="onestepcheckout_guestPaymentInformationManagement"
                type="Magestore\OneStepCheckout\Plugin\Checkout\Model\GuestPaymentInformationManagement"/>
    </type>
    <type name="Magestore\OneStepCheckout\Block\OneStep">
        <arguments>
            <argument name="layoutProcessors" xsi:type="array">
                <item name="paymentComponent" xsi:type="object">Magestore\OneStepCheckout\Block\Checkout\LayoutProcessor</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Tax\Block\Checkout\Tax">
        <plugin name="change_tax" type="Magestore\OneStepCheckout\Plugin\Checkout\Block\Checkout\Tax"/>
    </type>
</config>
