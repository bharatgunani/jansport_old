<script type="text/javascript" language="javascript">
	require(['jquery'],function($){
		$(document).ready(function(){
			// alert('Hello');
			$(".em-menu ul li.submenu").each(function(){
				var offset = $(this).offset();
				var width = $(window).width();
				var left_off = offset.left;
				//alert(offset.left);
				$(this).find(".dropmenu-template").width(width-1);
				$(this).find(".dropmenu-template").offset({ left: -left_off });
			});
		
		});
	
		$( window ).resize(function() {
			$(".em-menu ul li.submenu").each(function(){
				var offset = $(this).offset();
				var width = $(window).width();
				var left_off = offset.left;
				//alert(offset.left);
				$(this).find(".dropmenu-template").width(width-1);
				$(this).find(".dropmenu-template").offset({ left: -left_off });
			});
		});
    });
</script>
